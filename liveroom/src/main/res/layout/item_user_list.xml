<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp60">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_list_item_sdv"
        android:layout_marginLeft="@dimen/dp18"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        fresco:actualImageScaleType="centerCrop"
        fresco:backgroundImage="@color/rgb_eaeaea"
        fresco:placeholderImage="@drawable/ic_default_head"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/white"
        fresco:roundingBorderWidth="1dp"/>
    <TextView
        android:id="@+id/user_list_item_des"
        android:maxLength="14"
        android:textColor="#FF4E4E4E"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/sp14"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/user_list_item_complaint_tv"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp15"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        android:text="@string/complaint"
        android:background="@drawable/shape_commit_radius_by_green_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>