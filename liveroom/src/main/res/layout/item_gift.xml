<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_gift_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_gift_icon"
        android:layout_width="@dimen/item_gift_icon_size"
        android:layout_height="@dimen/item_gift_icon_size"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@drawable/ic_default_head"
        fresco:placeholderImageScaleType="fitCenter" />

    <ImageView
        android:id="@+id/item_gift_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_micro"
        android:src="@drawable/icon_continue_gift"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="1234"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_md_smallest" />

    <TextView
        android:id="@+id/item_gift_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="1234"
        android:textColor="#95BAFF"
        android:textSize="@dimen/text_size_md_smallest" />

</LinearLayout>