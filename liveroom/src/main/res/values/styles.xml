<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="anim_view">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/top_out</item>
    </style>

    <!--  dialog -->
    <style name="DialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SettingEditItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:minHeight">@dimen/dp50</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Divider style: All dividers -->

    <!-- room dialog finish -->
    <style name="live_finish_users_num">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="live_finish_users_num1" parent="@style/live_finish_users_num">
        <item name="android:layout_marginTop">@dimen/dp15</item>
        <item name="android:text">@string/room_live_finish_users_num_default</item>
    </style>


    <style name="room_gift_oper_container">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>

    <style name="room_gift_btn_charge">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="room_gift_chargeinfor_balance">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">@string/recharge_text_view_residue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="room_friend_chargeinfor_balance">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">@string/charge_friend_tip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="room_gift_account_balance_text">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="room_gift_account_balance_img">
        <item name="android:layout_width">17.0sp</item>
        <item name="android:layout_height">13.0sp</item>
        <item name="android:layout_marginLeft">3.0dip</item>
        <item name="android:src">@drawable/ic_me_myaccount_reddiamond</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="room_gift_account_balance_right_img">
        <item name="android:layout_width">8.0dip</item>
        <item name="android:layout_height">13.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:src">@drawable/ic_me_next</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="room_friend_btn_close">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/sel_gift_send</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:text">@string/room_close</item>
    </style>

    <style name="room_gift_btn_continuesend">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sel_gift_continue_send</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_height">80dip</item>
        <item name="android:layout_marginRight">20.0dip</item>
        <item name="android:layout_marginBottom">35.0dip</item>
        <item name="android:text">@string/layout_gift_continue_send_default</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!-- Space style : use these 2 style to fill a linear layout. -->
    <style name="Space" />

    <style name="Space.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_weight">1</item>
    </style>


